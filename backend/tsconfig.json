{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"allowJs": false,
		"alwaysStrict": true,
		"strict": true,
		"noImplicitUseStrict": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"allowUnreachableCode": true,
		"pretty": true,
		"removeComments": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"isolatedModules": true,
    "types": ["node"],
		"sourceMap": true,
		"rootDir": "./src",
		"outDir": "./dist"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"],
	"lib": ["esnext"]
}